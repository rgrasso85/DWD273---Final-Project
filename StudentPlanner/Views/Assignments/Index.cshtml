@model IEnumerable<StudentPlanner.Models.Assignments>

@{
    ViewBag.Title = "Assignments";
}

<h2>Assignments</h2>

<p>
    @Html.ActionLink("Add Assignment", "Create") &nbsp; @Html.ActionLink("Add Course","Index","Course")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            Progress
        </th>
        <th></th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssignmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignmentDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@Html.DisplayFor(modelItem => item.Progress)"
                     aria-valuemin="0" aria-valuemax="100" style="width:@Html.DisplayFor(modelItem => item.Progress)%">
                    <p>@Html.DisplayFor(modelItem => item.Progress)%</p>
                </div>
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
